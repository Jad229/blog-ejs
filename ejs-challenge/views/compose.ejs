<%- include("partials/header"); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">

    <div class="mb-3">
      <label class="form-label" for="titleText">Title</label>
      <input class="form-control" id="titleText" type="text" name="postTitle" placeholder="Title of your post">
    </div>

    <div class="mb-3">
      <label class="form-label" for="postText">Post</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
    </div>

  </div>

  <button type="submit" class="btn btn-primary" name="button">Publish</button>

</form>


<%- include("partials/footer"); -%>
